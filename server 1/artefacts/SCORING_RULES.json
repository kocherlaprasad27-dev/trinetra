{
  "schema_version": "1.0",
  "status_weights": {
    "PASS": 100,
    "MINOR": 70,
    "MAJOR": 40,
    "CRITICAL": 0,
    "NA": null
  },
  "severity_mapping": {
    "PASS": "cosmetic",
    "MINOR": "minor",
    "MAJOR": "major",
    "CRITICAL": "critical"
  },
  "room_score_calculation": {
    "method": "average",
    "exclude_status": ["NA"]
  },
  "overall_score_calculation": {
    "method": "weighted_average",
    "room_weight": "equal"
  },
  "report_thresholds": {
    "excellent": {
      "min": 85
    },
    "good": {
      "min": 70
    },
    "acceptable": {
      "min": 50
    },
    "poor": {
      "min": 0
    }
  }
}
